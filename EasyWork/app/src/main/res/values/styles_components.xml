<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StandardTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="StandardButtonStyle.Contained" parent="Widget.MaterialComponents.Button" />

    <style name="StandardButtonStyle.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="StandardButtonStyle.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StandardButtonStyle" parent="StandardButtonStyle.Contained" />

    <style name="StandardButtonStyle.Outline.Variant" parent="StandardButtonStyle.Outline">
        <item name="strokeColor">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!--    TODO: custom Google button-->
    <style name="GoogleButtonStyle" parent="StandardButtonStyle.Outline.Variant">
        <item name="icon">@drawable/ic_button_google</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@color/color_btn_google</item>
        <item name="android:text">@string/button_log_in_google</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    TODO: custom Facebook button-->
    <style name="FacebookButtonStyle" parent="StandardButtonStyle.Outline.Variant">
        <item name="icon">@drawable/ic_button_facebook</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@color/color_btn_facebook</item>
        <item name="android:text">@string/button_log_in_facebook</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="roundedPreviewImage" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/margin_medium</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_medium</item>
        <item name="cornerSizeBottomRight">@dimen/margin_medium</item>
    </style>

    <style name="circularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="StyleFloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="tint">?android:colorControlNormal</item>
        <item name="android:backgroundTint">@color/color_floating_button</item>
    </style>

    <style name="StyleFabEndCall" parent="StyleFloatingActionButton">
        <item name="rippleColor">@color/colorWhite</item>
        <item name="tint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/color_button_end_call</item>
        <item name="srcCompat">@drawable/ic_call_end</item>
    </style>
</resources>